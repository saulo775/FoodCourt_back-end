// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  avatarURL  String?
  permission String
  createdAt  DateTime @default(now())

  @@map("users")
}

model Table {
  id          Int       @id @default(autoincrement())
  numberTable Int       @unique
  isBusy      Boolean   @default(false)
  createdAt   DateTime  @default(now())
  sessions    Session[]

  @@map("tables")
}

model Session {
  id              Int              @id @default(autoincrement())
  isActive        Boolean
  createdAt       DateTime         @default(now())
  table           Table            @relation(fields: [tableId], references: [id])
  tableId         Int
  sessionProducts SessionProduct[]

  @@map("sessions")
}

model SessionProduct {
  id         Int      @id @default(autoincrement())
  quantity   Int
  createdAt  DateTime @default(now())
  session    Session  @relation(fields: [sessionId], references: [id])
  product    Product  @relation(fields: [productsId], references: [id])
  productsId Int
  sessionId  Int

  @@map("sessions_products")
}

model Product {
  id              Int              @id @default(autoincrement())
  title           String           @unique
  price           Int
  description     String
  productImage    String
  categoryId      Int
  createdAt       DateTime         @default(now())
  Category        Category         @relation(fields: [categoryId], references: [id])
  sessionProducts SessionProduct[]

  @@map("products")
}

model Category {
  id        Int       @id @default(autoincrement())
  title     String    @unique
  createdAt DateTime  @default(now())
  products  Product[]

  @@map("categories")
}
